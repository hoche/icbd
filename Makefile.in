#
#	Master makefile for the "internation CB" Internet chat system.
#	The file COPYING details the usage license.

#	WAIT!! YOU SHOULD NOT NEED TO EDIT THIS FILE.

#	INSTRUCTIONS: Type "./configure", and follow the directions.

#	"make"         - compile the sources
#	"make install" - compile sources, install binaries and man pages
#	"make clean"   - delete everything that "make" generates
#	"make distclean"  - return to pristine, deleting "configure" output

prefix       = @prefix@
exec_prefix  = @exec_prefix@
datarootdir  = @datarootdir@
BINDIR       = @bindir@
MANDIR       = @mandir@
DATADIR      = @datadir@

LIBDIR       = @top_srcdir@

SH           = /bin/sh
CPPFLAGS     = @CPPFLAGS@

#	Directories to do a make in.
DIRS 		= murgil server 
MANDIRS		= 

#	Files to be removed from top level with "make clean".
TOPCLEAN	= lmurgil.a core

#	Files that configure creates
CONFIG_CLEAN	= Makefile murgil/Makefile server/Makefile config.h config.log config.cache config.status autom4te.cache

#	Files to be tarred up with "make dist".
DISTFILES	= COPYING \
		  README \
		  README.CHANGEHIST \
		  README.INSTALL \
		  README.ToDo \
		  README.autoconf \
		  README.fn \
		  version.h \
		  Protocol.html \
		  Makefile.in \
		  config.h.in \
		  configure.in \
		  configure \
		  murgil \
		  server \
		  prod \
		  support

PREREQS		= config.h

#	Default

all:		$(PREREQS)
	@for dir in ${DIRS}; do \
		(echo Making in $${dir}; \
		 cd $${dir}; ${MAKE} ${MFLAGS} -${MAKEFLAGS}); done

install:	$(PREREQS)
	$(SH) support/install-sh server/icbd $(BINDIR)

clean:
	@for dir in ${DIRS}; do \
		(echo Making clean in $${dir}; \
		cd $${dir}; ${MAKE} clean); done
	-rm -f $(TOPCLEAN)

splint:		$(PREREQS)
	@for dir in ${DIRS}; do \
		(echo Making in $${dir}; \
		 cd $${dir}; ${MAKE} ${MFLAGS} -${MAKEFLAGS} splint); done

cppcheck:		$(PREREQS)
	@for dir in ${DIRS}; do \
		(echo Making in $${dir}; \
		 cd $${dir}; ${MAKE} ${MFLAGS} -${MAKEFLAGS} cppcheck); done
distclean:
	@for dir in ${DIRS}; do \
		(echo Making clean in $${dir}; \
		cd $${dir}; ${MAKE} clean); done
	-rm -f $(TOPCLEAN)
	-rm -rf $(CONFIG_CLEAN)

dist:	depend clean
	rm -rf dist
	mkdir dist dist/icbd
	cp -r $(DISTFILES) dist/icbd
	(cd dist; find . -name "CVS" | xargs rm -rf )
	(cd dist; rm -f icb.tar; @TAR@ -cf icbd.tar icbd)
	mv dist/icbd.tar .
	@COMPRESS@ -v icbd.tar
	rm -rf dist
